<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover ">
  	<thead>
	    <tr>
	      <th>Cfu initial</th>
	      <th>Cfu initial unit</th>
	      <th>Detectability</th>
	      <th>Cfu detected</th>
	      <th>Cfu detected unit</th>
	      <th>R comment</th>
	      <th></th>
	      <th></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @results.each do |result| %>
	      <tr>
	        <td width="30%"><h4><%= link_to result.cfu_initial, result_path(result) %></h4></td>
	        <td><%= result.cfu_initial_unit %></td>
	        <td><%= result.detectability %></td>
	        <td><%= result.cfu_detected %></td>
	        <td><%= result.cfu_detected_unit %></td>
	        <td><%= result.r_comment %></td>
	        <td><%= link_to 'Show', result, class: "btn btn-info btn-sm" %></td>
	        <td><%= link_to 'Edit', edit_result_path(result), class: "btn btn-warning btn-sm" %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>

	<br>

	<%= link_to 'New Result', new_result_path, class: "btn btn-success btn-sm"  %>
  

</div>