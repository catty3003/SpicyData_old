        <%= f.text_field :sensitivity %>
      </div>
      <div class="field">
        <%= f.text_field :specifity %>
      </div>
      <div class="field">
        <%= f.text_field :reliability_score %>
      </div>
      <div class="field">
        <%= f.text_area :d_comment %>
