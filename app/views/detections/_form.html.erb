        <%= f.text_field :d_weight_of_sample %>
      </div>
      <div class="field">
        <%= f.text_field :d_weight_of_sample_unit %>
      </div>
      <div class="field">
        <%= f.text_field :detection_method_dilution %>
      </div>
      <div class="field">
        <%= f.text_field :detection_method_type %>
      </div>
      <div class="field">
        <%= f.text_field :duration_until_result %>
      </div>
      <div class="field">
        <%= f.text_field :duration_until_result_unit %>
      </div>
      <div class="field">
        <%= f.text_field :target_gen %>
      </div>
      <div class="field">
        <%= f.text_field :target_protein %>
      </div>
      <div class="field">
        <%= f.text_area :other_characteristic %>
      </div>
