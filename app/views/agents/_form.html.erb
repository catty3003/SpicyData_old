<%= bootstrap_form_for(@agent) do |f| %>
  <% if @agent.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@agent.errors.count, "error") %> prohibited this agent from being saved:</h2>

      <ul>
      <% @agent.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<div class="well">          
  <div class="panel panel-info">
    <div class="panel-body"> 

      <div class="field">
        <%= f.text_field :a_common_name %>
      </div>
      <div class="field">
        <%= f.text_field :a_family %>
      </div>
      <div class="field">
        <%= f.text_field :a_genus %>
      </div>
      <div class="field">
        <%= f.text_field :a_species %>
      </div>
      <div class="field">
        <%= f.text_field :subspecies %>
      </div>
      <div class="field">
        <%= f.text_field :serovar %>
      </div>
      <div class="field">
        <%= f.text_field :other_agent_name %>
      </div>
      <div class="field">
        <%= f.number_field :ref_number %>
      </div>
      <div class="field">
        <%= f.text_field :rate_of_illness %>
      </div>
      <div class="field">
        <%= f.text_field :morbidity %>
      </div>
      <div class="field">
        <%= f.text_field :mortality %>
      </div>
      <div class="field">
        <%= f.text_field :isolation_source %>
      </div>
      <div class="field">
        <%= f.text_field :natural_occurence %>
      </div>
      <div class="field">
        <%= f.text_area :a_comment %>
      </div>
      <div class="field">
        <%= f.number_field :reference_id %>
      </div>
      <div class="field">
        <%= f.number_field :user_id %>
      </div>
      
    </div>
  </div>
  <div class="actions">
    <%= f.submit 'Save Agent', class: "btn btn-success" %> | | 
    <%= link_to 'Cancel', agents_path, class: "btn btn-danger" %>
  </div>
  <% end %>
</div>
