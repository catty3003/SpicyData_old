<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover ">
  	<thead>
	    <tr>
	      <th>Type of literatur</th>
	      <th>First author name</th>
	      <th>Year</th>
	      <th>Title</th>
	      <th>Journal</th>
	      <th>Volume</th>
	      <th>Page from</th>
	      <th>Page to</th>
	      <th>Link</th>
	      <th>Matrix</th>
	      <th>Agent</th>
	      <th>Spiking</th>
	      <th>Treatment</th>
	      <th>Sample prep</th>
	      <th>Detection</th>
	      <th>Tenacity</th>
	      <th>R comment</th>
	      <th>User</th>
	      <th></th>
	      <th></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @references.each do |reference| %>
	      <tr>
	        <td width="30%"><h4><%= link_to reference.type_of_literatur, reference_path(reference) %></h4></td>
	        <td><%= reference.first_author_name %></td>
	        <td><%= reference.year %></td>
	        <td><%= reference.title %></td>
	        <td><%= reference.journal %></td>
	        <td><%= reference.volume %></td>
	        <td><%= reference.page_from %></td>
	        <td><%= reference.page_to %></td>
	        <td><%= reference.link %></td>
	        <td><%= reference.matrix %></td>
	        <td><%= reference.agent %></td>
	        <td><%= reference.spiking %></td>
	        <td><%= reference.treatment %></td>
	        <td><%= reference.sample_prep %></td>
	        <td><%= reference.detection %></td>
	        <td><%= reference.tenacity %></td>
	        <td><%= reference.r_comment %></td>
	        <td><%= reference.user_id %></td>
	        <td><%= link_to 'Show', reference, class: "btn btn-info btn-sm" %></td>
	        <td><%= link_to 'Edit', edit_reference_path(reference), class: "btn btn-warning btn-sm" %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>

	<br>

	<%= link_to 'New Reference', new_reference_path, class: "btn btn-success btn-sm"  %>

</div>