<div class="bs-docs-section">
  <div class="row">
    <div class="col-md-12">


      <div class="page-header">          
        <h1>
          Tenacity <%= @tenacity.id %>
        </h1>
      </div>

      <div class="col-md-3" id="leftCol">
        <div class="well">    
          <h3>Single</h3>   
          <%= render 'layouts/sidebar_show' %>
        </div>
      </div>     

      <div class="col-md-9" id="rightCol"> 
        <div class="well">          
          <div class="panel panel-info">
            <div class="panel-body"> 

              <p>
                <strong>Total sample number:</strong>
                <%= @tenacity.total_sample_number %>
              </p>

              <p>
                <strong>Inoculum concentration initial:</strong>
                <%= @tenacity.inoculum_concentration_initial %>
              </p>

              <p>
                <strong>I concentration unit:</strong>
                <%= @tenacity.i_concentration_unit %>
              </p>

              <p>
                <strong>Reference:</strong>
                <%= @tenacity.reference_id %>
              </p>

              <p>
                <strong>User:</strong>
                <%= @tenacity.user_id %>
              </p>

            </div>
          </div>    
          <%= link_to 'Edit', edit_tenacity_path(@tenacity) %> |
          <%= link_to 'Back', tenacities_path %>  
        </div>
      </div>

    </div>     
  </div>
</div>
